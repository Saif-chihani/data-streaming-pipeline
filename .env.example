# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/engagement_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_ENGAGEMENT_EVENTS=engagement-events
KAFKA_CONSUMER_GROUP_ID=engagement-processor
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_MAX_POLL_RECORDS=500

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_KEEPALIVE=true
REDIS_SOCKET_KEEPALIVE_OPTIONS={}

# BigQuery Configuration
GOOGLE_APPLICATION_CREDENTIALS=config/bigquery-credentials.json
BIGQUERY_PROJECT_ID=your-project-id
BIGQUERY_DATASET_ID=engagement_analytics
BIGQUERY_TABLE_ID=enriched_events
BIGQUERY_LOCATION=US

# External System Configuration (Mock)
EXTERNAL_SYSTEM_URL=https://httpbin.org/post
EXTERNAL_SYSTEM_TIMEOUT=30
EXTERNAL_SYSTEM_RETRY_ATTEMPTS=3

# Processing Configuration
BATCH_SIZE=100
PROCESSING_INTERVAL_SECONDS=1
MAX_PROCESSING_TIME_SECONDS=300
ENABLE_EXACTLY_ONCE=true

# Redis Aggregation Configuration
REDIS_AGGREGATION_WINDOW_MINUTES=10
REDIS_TOP_CONTENT_KEY=top_content_last_10min
REDIS_AGGREGATION_TTL_SECONDS=900  # 15 minutes

# Monitoring Configuration
METRICS_PORT=8080
LOG_LEVEL=INFO
ENABLE_HEALTH_CHECKS=true

# Data Generator Configuration
GENERATION_INTERVAL=2
EVENTS_PER_BATCH=5
MAX_EVENTS_PER_DAY=10000

# Backfill Configuration
BACKFILL_BATCH_SIZE=1000
BACKFILL_START_DATE=2025-01-01
BACKFILL_END_DATE=2025-08-10
